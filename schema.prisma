datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  role     UserRole @default(USER)
  devices  Device[]
}

enum UserRole {
  USER
  ADMIN
}

model Invite {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Device {
  id       String     @id @default(cuid())
  model    String
  brand    String
  image    String
  type     DeviceType @default(STATIC)
  userId   String
  user     User       @relation(fields: [userId], references: [id])
  overlays Overlay[]
}

enum DeviceType {
  STATIC
  DYNAMIC
}

model Overlay {
  id           String        @id @default(cuid())
  name         String
  deviceId     String
  device       Device        @relation(fields: [deviceId], references: [id])
  interactions Interaction[]
}

model Interaction {
  id        String         @id @default(cuid())
  type      InteractionType
  x         Float
  y         Float
  width     Float
  height    Float
  rotation  Float
  title     String
  overlay   Overlay        @relation(fields: [overlayId], references: [id])
  overlayId String
  blocks    ContentBlock[]
}

enum InteractionType {
  SQUARE
  CIRCLE
}

model ContentBlock {
  id            String           @id @default(cuid())
  type          ContentBlockType
  data          Json
  interaction   Interaction      @relation(fields: [interactionId], references: [id])
  interactionId String
}

enum ContentBlockType {
  TEXT
  LIST
  IMAGE
}
